@model MyThirdProject.Models.tbl_student
@{
    ViewBag.Title = "Create Student";
}

<h2>Create Student</h2>

@using(Html.BeginForm("StoreStudent","Student",FormMethod.Post, new { @class="form-group"}))
            {
                <div class="container">
                    <div class="form-group">
                        <label>First Name</label>
                        @Html.TextBoxFor(x => x.FName, new { @class = "form-control" })
                        @Html.ValidationMessageFor(x=>x.FName,"", new { @class="text-danger" })
                    </div>

                    <div class="form-group">
                        <label>Last Name</label>
                        @Html.TextBoxFor(x => x.LName, new { @class = "form-control" })
                        @Html.ValidationMessageFor(x => x.LName, "", new { @class = "text-danger" })
                    </div>

                    <div class="form-group">
                        <label>Mobile Number</label>
                        @Html.TextBoxFor(x => x.Mobile_Number, new { @class = "form-control" })
                        @Html.ValidationMessageFor(x => x.Mobile_Number, "", new { @class = "text-danger" })
                    </div>

                    <div class="form-group">
                        <label>Email Id</label>
                        @Html.TextBoxFor(x => x.Email, new { @class = "form-control" })
                        @Html.ValidationMessageFor(x => x.Email, "", new { @class = "text-danger" })
                    </div>

                    <div class="form-group">
                        <label>About yourself</label>
                        @Html.TextAreaFor(x => x.About, new { @class = "form-control" })
                        @Html.ValidationMessageFor(x => x.About, "", new { @class = "text-danger" })
                    </div>

                    <button type="submit" class="btn btn-primary">Submit</button>
                    <button type="reset" class="btn btn-danger">Reset</button>
                </div>
            }